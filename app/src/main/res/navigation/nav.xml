<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/playFragment">

    <fragment
        android:id="@+id/playFragment"
        android:name="com.example.saba7okoraxcode.PlayFragment"
        android:label="fragment_play"
        tools:layout="@layout/fragment_play" >
        <action
            android:id="@+id/action_playFragment_to_start_game"
            app:destination="@id/start_game" />
    </fragment>
    <fragment
        android:id="@+id/start_game"
        android:name="com.example.saba7okoraxcode.StartGameFragment"
        android:label="fragment_start_game"
        tools:layout="@layout/fragment_start_game" />
    <activity
        android:id="@+id/launcher"
        android:name="com.example.saba7okoraxcode.launcher"
        android:label="activity_launcher"
        tools:layout="@layout/activity_launcher" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.saba7okoraxcode.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>